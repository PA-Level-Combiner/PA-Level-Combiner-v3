<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
			 xmlns:palc="using:PALC"
			 
			 x:Class="PALC.Main.App" 
			 RequestedThemeVariant="Light">

    <Application.Styles>
		<StyleInclude Source="avares://PALC.Common/Views/Styles/Styles.axaml"/>
		
		<StyleInclude Source="avares://PALC.Common/Views/Templates/Templates.axaml" />
	</Application.Styles>


	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="avares://PALC.Common/Views/Styles/Resources/Include.axaml" />
			</ResourceDictionary.MergedDictionaries>
			
			<palc:ProgramInfo x:Key="ProgramInfo" />
		</ResourceDictionary>
	</Application.Resources>

</Application>
